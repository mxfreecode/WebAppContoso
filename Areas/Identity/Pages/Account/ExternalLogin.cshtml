@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrar";
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">Te estas registrando con tu cuenta @Model.ProviderDisplayName.</h4>
<hr />

<p id="external-login-description" class="text-info">
    Te has autenticado correctamente con <strong> @Model.ProviderDisplayName </strong>.
    Ingrese una dirección de correo electrónico para este sitio y a continuación haga clic en el botón Registrar para finalizar.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Correo Electrónico</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
